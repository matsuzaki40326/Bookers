<h1>Books</h1>
<% @books.each do |book| %>

<p>Title</p>
<span><%= book.title %></span>
<p>Body</p>
<span><%= book.body %></span>

<p><%= link_to "Show", book_path(book.id) %></p>

<% end %>

<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post, local: true do |f| %>

<p>Title</p>
<%= f.text_field :title %>

<p>Body</p>
<%= f.text_area :body %>

<p><%= f.submit 'Create Book' %></p>
<% end %>


